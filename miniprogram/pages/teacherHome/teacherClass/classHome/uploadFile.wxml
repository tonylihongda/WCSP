<text class="page-section-title">上传文件</text>
<view class="page-section">
  <text>    题目:</text>
  <view class="textarea-wrp">
    <textarea bindinput="bindTextAreaBlur" auto-focus="true" style="height: 2em" />
  </view>
</view>

<text>    关键词:</text>
<input bindinput="input_key1" maxlength="10"></input>
<input bindinput="input_key2" maxlength="10"></input>
<input bindinput="input_key3" maxlength="10"></input>


<view class="page-section">
  <text>    简介:</text>
  <view class="textarea-wrp">
    <textarea bindinput="bindTextAreaBlur2" auto-focus="true" style="height: 5em" />
  </view>
</view>

<button type="primary" bindtap="selectSource" disabled="{{disable}}">选择文件</button>
<button type="primary" bindtap="uploadFile">确定上传</button>